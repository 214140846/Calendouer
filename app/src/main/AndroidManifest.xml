<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sealiu.calendouer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="ac0da37db6ef5f31028399107930eca2" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/setting"
            android:parentActivityName=".MainActivity" />

        <receiver android:name=".widget.DourAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/dour_app_widget_info" />
        </receiver>

        <service android:name="com.amap.api.location.APSService" />

        <receiver android:name=".receiver.UpdateWeatherReceiver" />
        <receiver android:name=".receiver.NotificationReceiver" />
        <receiver android:name=".receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".AddThingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ThingsDetailActivity"
            android:parentActivityName=".MainActivity" />

        <service
            android:name=".service.NotificationService"
            android:exported="false" />
        <service
            android:name=".service.DoneOrDeleteService"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.sealiu.calendouer.service.action.DONE" />
                <action android:name="cn.sealiu.calendouer.service.action.DELETE" />
            </intent-filter>
        </service>

        <service android:name=".service.SystemBootService" />
    </application>

</manifest>